#!aratar 0.1

Day_Of_Week {
    Sunday   : 0
    Monday   : 1
    Tuesday  : 2
    Wednesday: 3
    Thursday : 4
    Friday   : 5
    Saturday : 6
} Day_Of_Week

Day_Of_Week.next(self) -> Day_Of_Week {
    self {
        Sunday   : Monday
        Monday   : Tuesday
        Tuesday  : Wednesday
        Wednesday: Thursday
        Thursday : Friday
        Friday   : Saturday
        Saturday : Sunday
    } self
} Day_Of_Week.next()
